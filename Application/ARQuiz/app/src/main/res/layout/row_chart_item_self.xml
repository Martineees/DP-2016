<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:elevation="10dp"
        android:layout_height="60dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash_bg"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".02">

            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".98"
                android:padding="6dp"
                android:weightSum="1">

                <TextView
                    style="@style/ChartPositionW"
                    android:text="999."
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chartPosition"
                    android:layout_weight=".2" />

                <TextView
                    style="@style/ChartUserW"
                    android:text="You"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chartUser"
                    android:layout_weight=".6" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight=".2"
                    android:weightSum="1">

                    <TextView
                        style="@style/ChartPointsDescW"
                        android:text="@string/STR_CHART_PTS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"/>

                    <TextView
                        style="@style/ChartPointsW"
                        android:text="1120"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/chartPoints"
                        android:layout_weight=".8"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>